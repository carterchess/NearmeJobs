<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_backgroundgradient"
    tools:context="com.modernizeworkers.jobapplication.fragments.WhatJobLookingForFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="27dp"
        android:orientation="vertical">

        <com.modernizeworkers.jobapplication.customviews.JATextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:width="155dp"
            android:height="19dp"
            android:fontFamily="Cabin"
            android:text="Step 01 out of Step 02"
            android:id="@+id/stepCount"
            android:textColor="@color/textColor"
            android:layout_marginTop="70dp"
            android:textSize="16dp" />

        <com.modernizeworkers.jobapplication.customviews.JATextView
            android:id="@+id/whatJobTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:width="219dp"
            android:height="90dp"
            android:fontFamily="Cabin"
            android:text="What job are you looking for?"
            android:textColor="@color/textColor"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/jobEditText"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="60dp"
            android:background="@android:color/transparent"
            android:fontFamily="Cabin"
            android:hint="Eg:Android Developer"
            android:textColor="#80FFFFFF"
            android:text=""
            android:textColorHint="#80FFFFFF"
            android:textSize="20dp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="5dp"
            android:id="@+id/horizontalView"
            android:background="@color/textColor">

        </View>


        <Button
            android:layout_width="127dp"
            android:layout_height="40dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/next_button_background"
            android:fontFamily="Cabin"
            android:id="@+id/nextButton"

            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"

            android:textSize="20dp" />

    </LinearLayout>


</RelativeLayout>
